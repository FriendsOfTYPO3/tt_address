{
  "name": "friendsoftypo3/tt-address",
  "type": "typo3-cms-extension",
  "description": "Displays a list of addresses from an address table on the page.",
  "keywords": [
    "TYPO3",
    "extension",
    "addresses"
  ],
  "homepage": "https://github.com/FriendsOfTYPO3/tt_address",
  "authors": [
    {
      "name": "tt_address Development Team",
      "role": "Developer"
    }
  ],
  "license": "GPL-2.0-or-later",
  "require": {
    "typo3/cms-core": "^8.7 || ^9.5",
    "php": ">=7.0"
  },
  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "app-dir": ".Build",
      "web-dir": ".Build"
    },
    "typo3/class-alias-loader": {
      "class-alias-maps": [
        "Migrations/Code/ClassAliasMap.php"
      ]
    }
  },
  "autoload": {
    "psr-4": {
      "FriendsOfTYPO3\\TtAddress\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FriendsOfTYPO3\\TtAddress\\Tests\\": "Tests"
    }
  },
  "replace": {
    "tt_address": "self.version",
    "typo3-ter/tt-address": "self.version"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.4"
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/typo3conf/ext/",
      "[ -L .Build/typo3conf/ext/tt_address ] || ln -snvf ../../../../. .Build/typo3conf/ext/tt_address"
    ]
  }
}
